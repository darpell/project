<h1>Listing users</h1>

<table>
  <tr>
    <th>U</th>
    <th>U name</th>
    <th>U address</th>
    <th>U contact no</th>
    <th>U email</th>
    <th>U type</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.u_id %></td>
    <td><%=h user.u_name %></td>
    <td><%=h user.u_address %></td>
    <td><%=h user.u_contact_no %></td>
    <td><%=h user.u_email %></td>
    <td><%=h user.u_type %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user', new_user_path %>