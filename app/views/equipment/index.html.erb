<h1>Listing equipment</h1>

<table>
  <tr>
    <th>E code</th>
    <th>E name</th>
    <th>E price</th>
    <th>E user</th>
  </tr>

<% @equipment.each do |equipment| %>
  <tr>
    <td><%=h equipment.e_code %></td>
    <td><%=h equipment.e_name %></td>
    <td><%=h equipment.e_price %></td>
    <td><%=h equipment.e_user_id %></td>
    <td><%= link_to 'Show', equipment %></td>
    <td><%= link_to 'Edit', edit_equipment_path(equipment) %></td>
    <td><%= link_to 'Destroy', equipment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New equipment', new_equipment_path %>