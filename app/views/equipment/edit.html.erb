<h1>Editing equipment</h1>

<% form_for(@equipment) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :e_code %><br />
    <%= f.text_field :e_code %>
  </p>
  <p>
    <%= f.label :e_name %><br />
    <%= f.text_field :e_name %>
  </p>
  <p>
    <%= f.label :e_price %><br />
    <%= f.text_field :e_price %>
  </p>
  <p>
    <%= f.label :e_user_id %><br />
    <%= f.text_field :e_user_id %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

